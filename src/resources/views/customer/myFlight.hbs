<h1 class="mt-3">
  Phiếu đặt chỗ
</h1>

<table class="table mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Mã chuyến bay</th>
      <th scope="col">Hành khách</th>
      <th scope="col">CMND</th>
      <th scope="col">Điện thoại</th>
      <th scope="col">Hạng vé</th>
      <th scope="col">Giá tiền</th>
      <th scope="col"></th>
  </thead>
  <tbody>
    {{#each canCancelTickets}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.flight.flightId}}</td>
      <td>{{this.passenger}}</td>
      <td>{{this.CMND}}</td>
      <td>{{this.phoneNumber}}</td>
      <td>{{this.ticketRank}}</td>
      <td>{{this.price}}</td>
      <td><a href="" data-toggle="modal" data-target="#deleteFlight" data-id="{{this._id}}" data-ticketrank="{{this.ticketRank}}">Hủy vé</a></td>
    </tr>
    {{/each}}

    {{#each notCancelTickets}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.flight.flightId}}</td>
      <td>{{this.passenger}}</td>
      <td>{{this.CMND}}</td>
      <td>{{this.phoneNumber}}</td>
      <td>{{this.ticketRank}}</td>
      <td>{{this.price}}</td>
      <td></td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- Delete confirm --}}
<div class="modal fade" id="deleteFlight" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Hủy vé</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn có xác nhận hủy chuyến bay này
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete" type="button" class="btn btn-primary">Đồng ý</button>
      </div>
    </div>
  </div>
</div>

<form id="deleteForm" method="POST" ></form>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var id;
    var ticketRank;
    var deleteForm = document.getElementById('deleteForm')

     $('#deleteFlight').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget) 
      id = button.data('id')
      ticketRank = button.data('ticketrank')
    })

    var deleteButton = document.getElementById('btn-delete')
    deleteButton.onclick = function() {
      deleteForm.action = '/customer/myFlight/' + id + '/' + ticketRank + '?_method=DELETE';
      deleteForm.submit();
    }
  })
</script>