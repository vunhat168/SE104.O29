  <div class="wrapper">
      <div class="title-text">
        <div class="title login">Thêm tài khoản quản lí</div>
      </div>
      <div class="form-container">
        <div class="form-inner">
          <form action="/admin/createAccount" method="POST" class="signup">
            <div class="field">
              <input name="name" type="text" placeholder="Họ tên" value="{{data.name}}" required>
            </div>
            <div class="field">
              <input name="email" type="text" placeholder="Email" value="{{data.email}}" required>
            </div>
            <div class="field">
              <input name="password" type="password" placeholder="Mật khẩu" value="{{data.password}}" required>
            </div>
            <div class="field">
              <input name="confirmPassword" type="password" placeholder="Xác nhận mật khẩu" value="{{data.confirmPassword}}" required>
            </div>
            <div class="field">
                <select name="role" id="roleSelect">
                    <option hidden>Vai trò</option>
                    <option {{#if (isSelect data.role 'manager')}}selected{{/if}}>manager</option>
                </select>
            </div>
            {{#if error}}
              <div class="error-message" style="color: red;">{{error}}</div>
            {{/if}}
            <div class="field btn">
              <div class="btn-layer"></div>
              <input type="submit" value="Đăng kí">
            </div>
          </form>
        </div>
      </div>
    </div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const roleSelect = document.getElementById('roleSelect');

        function updateSelectColor() {
            if (roleSelect.value === 'admin' || roleSelect.value === 'manager' ) {
                roleSelect.style.color = '#333';
            } else {
                roleSelect.style.color = '#999';
            }
        }

        roleSelect.addEventListener('change', updateSelectColor);
    });
</script>